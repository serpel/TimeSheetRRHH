@{
    ViewBag.Title = "Settings";
}

<!-- BEGIN PAGE TITLE -->
<div class="page-title">
</div>

<div class="row">
    <div class="col-md-5">
        <div class="grid simple">
            <div class="grid-title no-border">
                <h4>Add <span class="semi-bold">Device</span></h4>
                <div class="tools"> <a href="javascript:;" class="collapse"></a> <a href="#grid-config" data-toggle="modal" class="config"></a> <a href="javascript:;" class="reload"></a> <a href="javascript:;" class="remove"></a> </div>
            </div>
            <div class="grid-body no-border">
                @using (Html.BeginForm("AddDevice", "Device", new { }, FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-12">
                        <h3>Device <span class="semi-bold"> Config </span></h3>
                        <p>The deafult port on the ZK devices is 4370</p>
                        <br>
                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-success">
                                <button data-dismiss="alert" class="close"></button>
                                @TempData["Message"]
                            </div>
                        }
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="row-fluid">
                                <div class="form-group">
                                    <label class="form-label">Ip</label>
                                    <span class="help"> "The Ip on device"</span>
                                    <div class="input-with-icon  right">
                                        <i class=""></i>                                        
                                        <input type="text" name="ip" id="ip" class="form-control" placeholder="0.0.0.0" >
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="form-group">
                                    <label class="form-label">Port</label>
                                    <span class="help"> "e.g 4370 "</span>
                                    <div class="input-with-icon  right">
                                        <i class=""></i>
                                        <input type="text" name="port" id="port" class="form-control" placeholder="4370">
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="form-group">
                                    <label class="form-label">Description</label>
                                    <span class="help"> "e.g IT Department"</span>
                                    <div class="input-with-icon  right">
                                        <i class=""></i>
                                        <input type="text" name="description" id="description" class="form-control" placeholder="Brief description of the device" >
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="form-group">
                                    <label class="form-label">Location</label>
                                    <span class="help"> "Adminstrative office"</span>
                                    <div class="input-with-icon  right">
                                        <i class=""></i>
                                        <input type="text" name="location" id="location" class="form-control" placeholder="Adminstrative office">
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="form-group">
                                    <label class="form-label">Type</label>
                                    <span class="help"> "e.g ZKDevice = ZK"</span>
                                    <div class="input-with-icon  right">
                                        <i class=""></i>
                                        <input type="text" name="type" id="type" class="form-control" placeholder="ZK">
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="form-group">
                                    <label class="form-label">SSR</label>
                                    <span class="help"> "e.g for set yes = 'S' and no = 'N'"</span>
                                    <div class="input-with-icon  right">
                                        <i class=""></i>
                                        <input type="text" name="SSR" id="SSR" class="form-control" placeholder="N">
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="form-group">
                                    <label class="form-label">OpenDoors</label>
                                    <span class="help"> "e.g for set yes = 'S' and no = 'N'"</span>
                                    <div class="input-with-icon  right">
                                        <i class=""></i>
                                        <input type="text" name="opendoor" id="opendoor" class="form-control" placeholder="N">
                                    </div>
                                </div>
                            </div>
                            <!--<div class="row-fluid">-->
                                <!--<div style="display:inline-block">-->                            
                                    <button class="btn btn-primary btn-cons" type="submit">Save</button>
                                    @Html.ActionLink("Cancel", "Index", new { }, new { @class="btn btn-primary btn-cons"})
                                    <!--<button class="btn btn-danger btn-cons" type="button">Stop</button>-->
                                <!--</div>-->
                                <div class="clearfix"></div>
                            <!--</div-->
                      </div>
                   </div>
                </div>
                }
            </div>
        </div>
    </div>
</div>
